    <div class="buttons">
        <button class="btn-accept" onclick="handleAccept()">‚ù§Ô∏è ÂêåÊÑè ‚ù§Ô∏è</button>
        <button class="btn-reject" onclick="handleReject()" id="rejectBtn">‰∏çË¶Å</button>
    </div>
    
    <div class="message" id="message"></div>
    
    <script>
        let rejectCount = 0;
        const rejectMessages = [
            "ËøôÊ†∑‰∏çÂ§™ÂêàÈÄÇÂêß...",
            "‰Ω†Êï¢ÊãíÁªùÊàëÂí¨Ê≠ª‰Ω†",
            "Ëøô‰∏™Áé©Á¨ë‰∏çÂ•ΩÁ¨ë",
            "‰Ω†ÂÜçËøôÊ†∑ÊàëË¶ÅÁîüÊ∞î‰∫Ü",
            "ÊúÄÂêé‰∏ÄÊ¨°Ë≠¶Âëä...",
            "üò† ÊãíÁªùÔºÅÊ∞∏Ëøú‰∏çÂèØËÉΩÔºÅ"
        ];
        
        const emojis = [
            "üë∂", "üò¢", "üò•", "üòì", "üò∞", "üò®",
            "üòñ", "üò£", "üòû", "üòü", "üò†", "üò°", "üë∫"
        ];
        
        let currentEmoji = "üë∂";
        let isAccepted = false;
    
        function showMessage(msg) {
            const el = document.getElementById("message");
            el.textContent = msg;
            el.style.display = "block";
            setTimeout(() => {
                if (!isAccepted) el.style.display = "none";
            }, 3000);
        }
    
        function handleReject() {
            if (rejectCount < rejectMessages.length) {
                showMessage(rejectMessages[rejectCount]);
                
                if (rejectCount === rejectMessages.length - 1) {
                    currentEmoji = "üò†";
                } else {
                    const availableEmojis = emojis.filter(e => e !== currentEmoji && e !== "üò†");
                    currentEmoji = availableEmojis[Math.floor(Math.random() * availableEmojis.length)];
                }
                
                document.querySelector(".emoji").textContent = currentEmoji;
                rejectCount++;
                
                if (rejectCount >= rejectMessages.length) {
                    document.getElementById("rejectBtn").disabled = true;
                }
            }
        }
    
        function handleAccept() {
            isAccepted = true;
            document.body.classList.add("accepted");
            showMessage("Â§™Â•Ω‰∫ÜÔºÅ‰ªéÁé∞Âú®ÂºÄÂßãÊàëÂ∞±ÊòØ‰Ω†Áà∏Áà∏‰∫ÜÔºÅüéâ");
            document.querySelector(".emoji").textContent = "üë®";
            document.querySelector(".btn-accept").disabled = true;
            document.getElementById("rejectBtn").disabled = true;
        }
    </script>
